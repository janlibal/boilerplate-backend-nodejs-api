{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Backend API",
  "main": "src/index.ts",
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=14.0.0"
  },
  "scripts": {
    "migration:make": "knex migrate:make --knexfile ./src/database/knexfile.ts",
    "db-dev:migrate": "knex migrate:latest --env development --knexfile ./src/database/knexfile.ts",
    "db-test:migrate": "knex migrate:latest --env test --knexfile ./src/database/knexfile.ts",
    "seed:make": "knex seed:make --knexfile ./src/database/knexfile.ts",
    "db-dev:seed": "knex seed:run --env development --knexfile ./src/database/knexfile.ts",
    "db-test:seed": "knex seed:run --env test --knexfile ./src/database/knexfile.ts",
    "dev": "cross-env ENV_FILE=./src/config/env/.env.dev nodemon",
    "prod": "cross-env ENV_FILE=./src/config/env/.env.prod nodemon",
    "staging": "cross-env ENV_FILE=./src/config/env/.env.staging ts-node-dev --poll --respawn --transpile-only ./src/index.ts",
    "coverage": "nyc report --reporter=json",
    "test": "cross-env ENV_FILE=./src/config/env/.env.test mocha -r ts-node/register --timeout 5000 --colors ./tests/**/*.spec.ts",
    "build": "tsc",
    "start": "node ./dist/src/index.js",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "author": "Jan Libal",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@types/node": "^20.10.5",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "dotenv-extended": "^2.9.0",
    "dotenv-parse-variables": "^2.0.0",
    "jsonschema": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-bodyparser": "^4.4.1",
    "koa-compress": "^5.1.1",
    "koa-helmet": "^7.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.1",
    "lodash": "^4.17.21",
    "objection": "^3.1.3",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@ngneat/falso": "^7.1.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/dotenv-parse-variables": "^2.0.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/koa__cors": "^4.0.3",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-compress": "^4.0.6",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-router": "^7.4.8",
    "@types/lodash": "^4.14.202",
    "@types/mocha": "^10.0.6",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "pino-pretty": "^10.3.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
